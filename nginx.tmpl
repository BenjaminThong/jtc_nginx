# https://github.com/kelseyhightower/confd/blob/master/docs/templates.md#getvs
upstream nodejs_pool {
{{range getvs "/services/nodejs/*"}}
    server {{.}};
{{end}}
}

upstream couchbase_pool {
{{range getvs "/services/couchbase/*"}}
    server {{.}}:8091;
{{end}}
}

